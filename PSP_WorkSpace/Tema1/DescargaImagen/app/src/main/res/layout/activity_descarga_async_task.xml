<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.salesianostriana.psp.descargaimagen.DescargaAsyncTask">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextDownloadAsyncTask"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:hint="@string/hint_download"
        android:text="@string/url_download_asyntask" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_download"
        android:id="@+id/btnDownloadHandler"
        android:layout_below="@+id/editTextDownloadAsyncTask"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageViewPhotoAsync"
        android:layout_below="@+id/btnDownloadHandler"
        android:layout_alignParentStart="true" />
</RelativeLayout>
