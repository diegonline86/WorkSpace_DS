<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTiempoTotal"
        android:hint="@string/hint_total_time"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_empezar"
        android:id="@+id/btn_empezar"
        android:layout_marginBottom="59dp"
        android:textSize="40sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTiempoRestante"
        android:textSize="60sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextRetardo"
        android:textSize="30dp"
        android:layout_below="@+id/editTiempoTotal"
        android:hint="@string/hint_mils_time"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_pause"
        android:id="@+id/btnPause"
        android:textSize="40dp"
        android:layout_alignTop="@+id/btn_empezar"
        android:layout_toRightOf="@+id/btn_empezar"
        android:layout_toEndOf="@+id/btn_empezar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RES"
        android:id="@+id/btnResume"
        android:textSize="40dp"
        android:layout_alignTop="@+id/btnPause"
        android:layout_toRightOf="@+id/btnPause"
        android:layout_toEndOf="@+id/btnPause" />

</RelativeLayout>
