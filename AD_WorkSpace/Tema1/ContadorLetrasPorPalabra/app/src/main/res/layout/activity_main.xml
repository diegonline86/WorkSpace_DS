<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editTextPhrase"
        android:textSize="10dp"
        android:layout_centerHorizontal="true"
        android:text="@string/quijote" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GO"
        android:id="@+id/button_go"
        android:layout_marginStart="49dp"
        android:layout_alignTop="@+id/button_reset"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:id="@+id/button_reset"
        android:layout_marginEnd="61dp"
        android:layout_below="@+id/editTextPhrase"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewResult"
        android:layout_marginTop="69dp"
        android:hint="Resultado"
        android:layout_below="@+id/button_go"
        android:layout_alignStart="@+id/button_go"
        android:layout_alignEnd="@+id/button_reset" />



</RelativeLayout>
