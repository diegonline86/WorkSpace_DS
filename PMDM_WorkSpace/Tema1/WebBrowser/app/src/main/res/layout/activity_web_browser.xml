<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".WebBrowser">

    <EditText
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextSearchBar"
        android:hint="@string/hint_web_search"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imgBtnBookMark"
        android:src="@drawable/ic_bookmark"
        android:layout_above="@+id/webViewBrowser"
        android:layout_toStartOf="@+id/imgBtnBookmarkSaved" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imgBtnBookmarkSaved"
        android:src="@drawable/ic_saved_bookmarks"
        android:layout_alignBottom="@+id/editTextSearchBar"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imgBtnSearchWeb"
        android:src="@drawable/ic_search_web"
        android:layout_alignBottom="@+id/imgBtnBookMark"
        android:layout_toStartOf="@+id/imgBtnBookMark" />

    <WebView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/webViewBrowser"
        android:layout_below="@+id/editTextSearchBar"
        android:layout_alignParentStart="true" />



</RelativeLayout>
