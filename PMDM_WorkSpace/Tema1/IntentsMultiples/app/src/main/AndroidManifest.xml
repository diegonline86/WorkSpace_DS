<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.salesianostriana.pmdm.intentsmultiples" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".IntentsMultiples"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SENDTO" />

                <data android:scheme="mailto" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LLamarTelefono"
            android:label="@string/title_activity_llamar_telefono" >
        </activity>
        <activity
            android:name=".BuscarEnMapa"
            android:label="@string/title_activity_buscar_en_mapa" >
        </activity>
        <activity
            android:name=".EnviarEmail"
            android:label="@string/title_activity_enviar_email" >
        </activity>
    </application>

</manifest>
