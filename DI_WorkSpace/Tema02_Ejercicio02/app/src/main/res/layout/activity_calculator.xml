<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".CalculatorActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_grey">

        <TextView
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="20dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textAlignment="gravity"
            android:id="@+id/textViewResult"
            android:layout_marginTop="40dp"
            android:text="1250"
            android:textSize="70dp"
            android:background="@color/light_grey2"
            android:contextClickable="true"
            android:gravity="right"
            android:textColor="@color/result_text" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:weightSum="1"
        android:background="@color/light_grey"
        android:layout_weight="0.10">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp">

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/buton_division"
                android:id="@+id/button_division"
                android:textSize="25dp"
                android:backgroundTint="@color/dark_button"
                android:textColor="@android:color/white"/>

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/button_percent"
                android:id="@+id/button_percent"
                android:backgroundTint="@color/dark_button"
                android:textColor="@android:color/white"
                android:textSize="25dp" />

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/button_square_root"
                android:id="@+id/button_square_root"
                android:backgroundTint="@color/dark_button"
                android:textColor="@android:color/white"
                android:textSize="25dp" />

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/button_ac"
                android:id="@+id/button_ac"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/red_button"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp">

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/button_seven"
                android:id="@+id/button_seven"
                android:backgroundTint="@color/dark_grey_button"
                android:textColor="@android:color/white"
                android:textSize="25dp" />

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/button_four"
                android:id="@+id/button_4"
                android:backgroundTint="@color/dark_grey_button"
                android:textColor="@android:color/white"
                android:textSize="25dp" />

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/button_one"
                android:id="@+id/button_one"
                android:backgroundTint="@color/dark_grey_button"
                android:textColor="@android:color/white"
                android:textSize="25dp" />

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/button_zero"
                android:id="@+id/button_zero"
                android:backgroundTint="@color/dark_grey_button"
                android:textColor="@android:color/white"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp">

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/button_eight"
                android:id="@+id/button_eight"
                android:backgroundTint="@color/dark_grey_button"
                android:textColor="@android:color/white"
                android:textSize="25dp" />

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/button_five"
                android:id="@+id/button_five"
                android:backgroundTint="@color/dark_grey_button"
                android:textColor="@android:color/white"
                android:textSize="25dp" />

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/button_two"
                android:id="@+id/button_two"
                android:backgroundTint="@color/dark_grey_button"
                android:textColor="@android:color/white"
                android:textSize="25dp" />

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/button_dot"
                android:id="@+id/button_dot"
                android:backgroundTint="@color/dark_grey_button"
                android:textColor="@android:color/white"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp">

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/button_nine"
                android:id="@+id/button_nine"
                android:backgroundTint="@color/dark_grey_button"
                android:textColor="@android:color/white"
                android:textSize="25dp" />

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/button_six"
                android:id="@+id/button_six"
                android:backgroundTint="@color/dark_grey_button"
                android:textColor="@android:color/white"
                android:textSize="25dp" />

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/button_three"
                android:id="@+id/button_three"
                android:backgroundTint="@color/dark_grey_button"
                android:textColor="@android:color/white"
                android:textSize="25dp" />

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/button_equal"
                android:id="@+id/button_equal"
                android:backgroundTint="@color/dark_button"
                android:textColor="@android:color/white"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp">

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/button_mult"
                android:id="@+id/button_mult"
                android:backgroundTint="@color/dark_button"
                android:textColor="@android:color/white"
                android:textSize="25dp" />

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/button_minus"
                android:id="@+id/button_minus"
                android:backgroundTint="@color/dark_button"
                android:textColor="@android:color/white"
                android:textSize="25dp" />

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/button_plus"
                android:id="@+id/button_plus"
                android:layout_weight="0.56"
                android:backgroundTint="@color/dark_button"
                android:textColor="@android:color/white"
                android:textSize="25dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
