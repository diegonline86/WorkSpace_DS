<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayerPro">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/gradient2"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:src="@drawable/ic_action_back"
            android:background="@android:color/transparent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/imageButton"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="U2"
            android:id="@+id/textViewArtist"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/button"
            android:textColor="#B4B3B4"
            android:textSize="15dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="1/2"
            android:id="@+id/textViewTrackNumber"
            android:layout_below="@+id/textViewArtist"
            android:layout_toEndOf="@+id/button"
            android:textColor="#B4B3B4"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="U2 Singles"
            android:id="@+id/textViewAlbumTitle"
            android:layout_below="@+id/textViewTrackNumber"
            android:layout_toEndOf="@+id/button"
            android:textColor="#B4B3B4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Beautiful Day"
            android:id="@+id/textViewSong"
            android:layout_above="@+id/textViewAlbumTitle"
            android:layout_toEndOf="@+id/textViewTrackNumber"
            android:textColor="#ffffff"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textIsSelectable="false" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_settings"
            android:background="@android:color/transparent"
            android:id="@+id/button2"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/textViewAlbumTitle"
            android:layout_marginRight="10dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:src="@drawable/ic_action_speaker_loud"
            android:background="@android:color/transparent"
            android:layout_alignTop="@+id/ratingBar"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/textViewAlbumTitle"
            android:layout_marginLeft="10dp" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar" style="@android:style/Widget.DeviceDefault.Light.RatingBar.Indicator"
            android:layout_below="@+id/textViewAlbumTitle"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imBtnEqualizer"
            android:src="@drawable/ic_action_equalizer"
            android:background="@android:color/transparent"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/button2"
            android:layout_alignTop="@+id/ratingBar"
            android:layout_alignStart="@+id/button2" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout"
        android:background="@drawable/gradient"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:id="@+id/imageView"
            android:background="@drawable/u2_singles"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageButton2"
            android:background="@drawable/ic_action_shuffle"
            android:layout_alignTop="@+id/imgBtnBackward"
            android:layout_alignParentStart="true"
            android:layout_marginStart="13dp"
            android:backgroundTint="#ffffff" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imgBtnBackward"
            android:background="@drawable/ic_action_backward"
            android:layout_below="@+id/imageView"
            android:layout_toStartOf="@+id/btn_pause_play"
            android:layout_marginTop="15dp"
            android:backgroundTint="#ffffff" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/btn_pause_play"
            android:background="@drawable/play"
            android:layout_alignBottom="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageButton5"
            android:background="@drawable/ic_action_forward"
            android:layout_alignTop="@+id/imgBtnBackward"
            android:layout_toEndOf="@+id/btn_pause_play"
            android:backgroundTint="#ffffff" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageButton6"
            android:background="@drawable/ic_action_loop"
            android:layout_alignTop="@+id/imageButton5"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="13dp"
            android:backgroundTint="#ffffff" />

        <SeekBar
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="2:44"
            android:id="@+id/textView"
            android:textColor="#B4B3B4"
            android:layout_alignTop="@+id/seekBar"
            android:layout_toStartOf="@+id/seekBar"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="4:05"
            android:id="@+id/textView2"
            android:textColor="#B4B3B4"
            android:layout_alignTop="@+id/seekBar"
            android:layout_toEndOf="@+id/seekBar"
            android:layout_marginTop="5dp" />

    </RelativeLayout>


</RelativeLayout>
