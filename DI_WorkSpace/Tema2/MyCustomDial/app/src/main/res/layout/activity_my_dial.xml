<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MyDialActivity"
    android:background="@android:color/background_dark">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewDialer"
        android:textSize="50dp"
        android:gravity="right"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/white"
        android:textIsSelectable="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/button_one"
        android:layout_marginLeft="50dp"
        android:textSize="40dp"
        android:background="@android:color/transparent"
        android:textColor="@color/dialer_buttons"
        android:layout_marginStart="49dp"
        android:layout_below="@+id/button_del"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/button_two"
        android:background="@android:color/transparent"
        android:textColor="@color/dialer_buttons"
        android:layout_alignTop="@+id/button_one"
        android:layout_toEndOf="@+id/button_one"
        android:textSize="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/button_three"
        android:background="@android:color/transparent"
        android:textColor="@color/dialer_buttons"
        android:textSize="40dp"
        android:layout_alignTop="@+id/button_two"
        android:layout_toEndOf="@+id/button_two" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/button_four"
        android:background="@android:color/transparent"
        android:textColor="@color/dialer_buttons"
        android:textSize="40dp"
        android:layout_below="@+id/button_one"
        android:layout_alignStart="@+id/button_one" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/button_five"
        android:background="@android:color/transparent"
        android:textColor="@color/dialer_buttons"
        android:textSize="40dp"
        android:layout_above="@+id/button_eight"
        android:layout_toStartOf="@+id/button_three" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/button_six"
        android:background="@android:color/transparent"
        android:textColor="@color/dialer_buttons"
        android:layout_alignBottom="@+id/button_four"
        android:layout_toEndOf="@+id/button_five"
        android:textSize="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/button_seven"
        android:background="@android:color/transparent"
        android:textColor="@color/dialer_buttons"
        android:textSize="40dp"
        android:layout_below="@+id/button_four"
        android:layout_alignStart="@+id/button_four" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/button_eight"
        android:background="@android:color/transparent"
        android:textColor="@color/dialer_buttons"
        android:layout_above="@+id/button_zero"
        android:layout_alignStart="@+id/button_zero"
        android:textSize="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/button_nine"
        android:background="@android:color/transparent"
        android:textColor="@color/dialer_buttons"
        android:layout_alignBottom="@+id/button_eight"
        android:layout_toEndOf="@+id/button_eight"
        android:textSize="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:background="@android:color/transparent"
        android:textColor="@color/dialer_buttons"
        android:id="@+id/button_asterisk"
        android:layout_below="@+id/button_seven"
        android:layout_alignEnd="@+id/button_seven"
        android:textSize="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/button_zero"
        android:background="@android:color/transparent"
        android:textColor="@color/dialer_buttons"
        android:layout_below="@+id/button_seven"
        android:layout_toEndOf="@+id/button_seven"
        android:textSize="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#"
        android:id="@+id/button_pad"
        android:background="@android:color/transparent"
        android:textColor="@color/dialer_buttons"
        android:layout_below="@+id/button_eight"
        android:layout_toEndOf="@+id/button_eight"
        android:textSize="40dp" />

    <Button
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_del"
        android:background="@android:drawable/ic_input_delete"
        android:layout_below="@+id/textViewDialer"
        android:layout_alignEnd="@+id/textViewDialer" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/button_call"
        android:background="@drawable/selectors"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
