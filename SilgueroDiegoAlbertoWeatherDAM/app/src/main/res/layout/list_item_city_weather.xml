<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_weather_city"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        card_view:cardCornerRadius="4dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewCityWeatherState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="estado"
                android:layout_marginTop="24dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textSize="20dp"
                android:textColor="#303030" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgViewWeatherState"
                android:src="@drawable/ic_weather_default"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:padding="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ciudad"
                android:id="@+id/textViewLocation"
                android:layout_below="@+id/textViewCityWeatherState"
                android:layout_alignStart="@+id/textViewCityWeatherState"
                android:layout_marginTop="16dp"
                android:textColor="#303030"
                android:textSize="17dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="temp"
                android:id="@+id/textViewTemp"
                android:layout_marginStart="27dp"
                android:layout_alignTop="@+id/textViewCityWeatherState"
                android:layout_toEndOf="@+id/textViewCityWeatherState"
                android:textSize="20dp"
                android:textColor="#303030" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgBtnBookMark"
                android:layout_marginEnd="16dp"
                android:layout_below="@+id/textViewTemp"
                android:layout_alignParentEnd="true"
                android:background="@android:color/transparent" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>