<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context="com.salesianostriana.proyectoconjunto.weatherdam.fragments.WeatherDetailFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewIconWeather"
        android:layout_gravity="left|top"
        android:src="@drawable/ic_weather_default"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:id="@+id/textViewLocation"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/imageViewIconWeather"
        android:layout_toEndOf="@+id/imageViewIconWeather"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="47dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="temp"
        android:id="@+id/textViewTemp"
        android:textSize="25dp"
        android:layout_alignBottom="@+id/imageViewIconWeather"
        android:layout_alignStart="@+id/textViewLocation"
        android:layout_marginBottom="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="humidity"
        android:id="@+id/textViewHumidity"
        android:textSize="25dp"
        android:layout_below="@+id/textViewTempMin"
        android:layout_alignStart="@+id/textViewTempMin"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="temp max"
        android:id="@+id/textViewTempMax"
        android:textSize="25dp"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/imageViewIconWeather"
        android:layout_alignStart="@+id/imageViewIconWeather" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="temp min"
        android:id="@+id/textViewTempMin"
        android:textSize="25dp"
        android:layout_alignTop="@+id/textViewTempMax"
        android:layout_alignStart="@+id/textViewTemp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="speed"
        android:id="@+id/textViewWind"
        android:textSize="25dp"
        android:layout_alignTop="@+id/textViewHumidity"
        android:layout_alignStart="@+id/textViewTempMax" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/detail_max_temp"
        android:id="@+id/textViewSmallMaxTemp"
        android:layout_below="@+id/textViewTempMax"
        android:layout_alignStart="@+id/textViewTempMax" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/detail_min_temp"
        android:id="@+id/textViewSmallMinTemp"
        android:layout_below="@+id/textViewTempMin"
        android:layout_alignStart="@+id/textViewTempMin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/detail_wind_speed"
        android:id="@+id/textViewSmallWind"
        android:layout_below="@+id/textViewWind"
        android:layout_alignStart="@+id/textViewWind" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/detail_humidity"
        android:id="@+id/textViewSmallHumidity"
        android:layout_below="@+id/textViewHumidity"
        android:layout_alignStart="@+id/textViewHumidity" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pressure"
        android:id="@+id/textViewPressure"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/textViewSmallWind"
        android:layout_alignStart="@+id/textViewSmallWind"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/detail_pressure"
        android:id="@+id/textViewSmallPressure"
        android:layout_below="@+id/textViewPressure"
        android:layout_alignStart="@+id/textViewPressure" />

</RelativeLayout>
